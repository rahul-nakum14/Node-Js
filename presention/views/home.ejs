<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
</head>
<body>
    <%- include('./partials/navbar') %>
    <div class="container mt-3 text-center">
        <div class="row row-cols-4">
            <% blogs.forEach(blog => { %>
                <% if (!blog.isPrivate || (locals.user && blog.createdBy.equals(locals.user._id))) { %>

                <div class="col mb-4">
                    <div class="card" style="width: 18rem;">
                        <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="Blog Cover Image" height="200px" width="200px">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
                <% } else { %>
                <% } %>
            <% }) %>
        </div>
    </div>
    <%- include('./partials/script') %>
</body>
</html>
