<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
</head>
<body>
    <%- include('./partials/navbar') %>
    <div class="container mt-3">
        <form action="/blog/add-new" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="blogTitle">Title</label>
              <input type="text" class="form-control" id="blogTitle" name="blogTitle">
            </div>

            <div class=" mb-3">
                <label for="blogBody">Body</label>
                <textarea class="form-control" placeholder="Leave a Desription here" id="blogBody" name="blogBody"></textarea>
            </div>

            
            <div class="mb-3">
                <label for="blogCoverImage">Cover Image</label>

                <input type="file" class="form-control" id="blogCoverImage" name="blogCoverImage">

            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>
    </div>
    <%- include('./partials/script') %>
</body>
</html>
